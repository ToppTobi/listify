<!-- app/views/groups/new.html.erb -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3>Neue Gruppe erstellen</h3>
        </div>
        <div class="card-body">
          <%= form_for(@group) do |f| %>
            <div class="form-group">
              <%= f.label :name, "Gruppenname", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Name der Gruppe" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :plz, "Postleitzahl", class: "form-label" %>
              <%= f.text_field :plz, class: "form-control", placeholder: "PLZ" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :city, "Stadt", class: "form-label" %>
              <%= f.text_field :city, class: "form-control", placeholder: "Stadt" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :address, "Adresse", class: "form-label" %>
              <%= f.text_field :address, class: "form-control", placeholder: "Adresse" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :description, "Beschreibung", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Kurze Beschreibung der Gruppe" %>
            </div>

            <div class="form-group mt-4">
              <%= f.submit "Gruppe erstellen", class: "btn btn-primary w-100" %>
            </div>
          <% end %>

          <div class="mt-3">
            <%= link_to "ZurÃ¼ck zu Gruppen", groups_path, class: "btn btn-secondary w-100" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
